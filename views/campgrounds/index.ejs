<% include ../partials/header %>
    <div class= "container">
        <header class= "jumbotron">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the World!</p>
            <a class= "btn btn-primary btn-large" href= "/index/new">Add new Campground</a><br>
        </header>
        <div class= "row" style= "display: flex; flex-wrap: wrap; text-align: center">
            <% campgrounds.forEach(function(campground) { %>
                <div class= "col-md-3 col-sm-6">
                    <div class= "thumbnail">
                        <img src= "<%= campground.campGroundImage %>">
                        <div class= "caption">
                            <h4> <%= campground.campGroundName %> </h4> 
                        </div>
                        <p><a href="/index/<%= campground._id%>" class= "btn btn-primary btn-md">More Info</a></p>
                    </div>
                </div> 
            <% }); %>
        </div>    
    </div>
<% include ../partials/footer %>
        
    