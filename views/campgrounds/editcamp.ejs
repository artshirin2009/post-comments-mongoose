<% include ../partials/header %>
    <div class= "container">
        <div class= "row">
            <h1 style= "text-align: center">Edit "<%=campground.campGroundName %>"</h1>
            <div style= "width: 30%; margin: 25px auto;">
                <form action= "/index/<%=campground._id %>?_method=PUT" method= "POST">
                    <div class= "form-group">
                        <input class= "form-control" type= "text" name= "campground[campGroundName]" value= "<%=campground.campGroundName%>">
                    </div>
                    <div class= "form-group">
                        <input class= "form-control" type= "text" name= "campground[campGroundImage]" value= "<%=campground.campGroundImage%>">
                    </div>
                    <div class= "form-group">
                        <input class= "form-control" type= "text" name= "campground[description]" value= "<%=campground.description%>">
                    </div>
                    <div class= "form-group">
                        <button class= "btn btn-primary btn-large">Update Campground</button><br>
                    </div>
                </form>
                <a href="/index">Go Back!</a>
            </div>
        </div>
    </div>
<% include ../partials/footer %>